<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.airsoft">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GamesRecyclerActivity"
            android:label="@string/title_activity_games_recycler"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".GamesRecyclerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MembersRecyclerActivity"
            android:label="@string/title_activity_members_recycler"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name=".MembersRecyclerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MemberInfo" />
        <activity android:name=".NewGameActivity">
            <intent-filter>
                <action android:name=".NewGameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GamesActivity">
            <intent-filter>
                <action android:name=".GamesActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PersonActivity">
            <intent-filter>
                <action android:name=".PersonActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>