<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ConnectingToTeam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <TextView
                android:id="@+id/person_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Соединение с командой"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"

                />

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/team_in_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Если ваша команда уже зарегистрирована:"
            android:textColor="@color/black"
            android:textSize="19dp"
            tools:ignore="Autofill,LabelFor"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>


        <EditText
            android:id="@+id/team_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите ключ здесь"
            android:textColor="@color/black"
            tools:ignore="Autofill,LabelFor"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/connect_to_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/buttonStyleBorderSand"
            android:text="Присоедениться к своей команде"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/create_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/buttonStyleBorderSand"
            android:text="Моей команды еще нет здесь"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/solo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/buttonStyleBorderSand"
            android:text="Я играю без команды"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>