<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/multicam"
    tools:context=".Activities.CreatingRequestToGame">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/new_request_to_game_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <TextView
                    android:id="@+id/new_request_to_game_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Новая заявка на участие команды в игре"
                    android:textAlignment="center"
                    android:textSize="25sp"

                    />
            </com.google.android.material.appbar.AppBarLayout>


            <EditText
                android:id="@+id/new_request_to_game_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text=""
                android:inputType="number"
                android:hint="Количество игроков от команды"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/new_request_to_game_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text=""
                android:hint="Комментарий к заявке"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <Button
                android:id="@+id/button_new_request_to_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="подать заявку"
                android:layout_margin="16dp"
                style="@style/buttonStyleBorderSand"/>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>