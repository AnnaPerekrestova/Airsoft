<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/multicam"
    tools:context=".GamesViewSelectOrgcom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Button
                android:id="@+id/planing_games_orgcom"
                style="@style/buttonStyleBorderSand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="запланированные игры"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:id="@+id/prev_games_orgcom"
                style="@style/buttonStyleBorderSand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planing_games"
                android:layout_margin="16dp"
                android:text="прошедшие игры"
                app:layout_constraintTop_toBottomOf="@+id/planing_games_orgcom" />

            <Button
                android:id="@+id/actual_games_orgcom"
                style="@style/buttonStyleBorderSand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="текущие игры"
                app:layout_constraintTop_toBottomOf="@+id/prev_games_orgcom" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>